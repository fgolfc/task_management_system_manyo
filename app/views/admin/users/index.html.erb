<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:is_admin) %></th>
      <th><%= User.human_attribute_name(:tasks_count) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

      <% @admin_user.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.admin? ? t('helpers.yes') : t('helpers.no') %></td>
          <td><%= user.tasks_count %></td>
          <td><%= link_to t('common.show'), user, class: 'show-user' %></td>
          <td><%= link_to t('common.edit'), edit_user_path(user), class: 'edit-user' %></td>
          <td><%= link_to t('common.destroy'), user_path(user), method: :delete, data: { confirm: t('common.confirm_destroy') }, class: 'destroy-user' %></td>
        </tr>
      <% end %>

  </tbody>
</table>