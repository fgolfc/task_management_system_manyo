<h1>Tasks Index Page</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.title %>
      <%= task.content %>
      <%= task.created_at.strftime("%Y-%m-%d %H:%M:%S %Z") %>
      <%= link_to "Show", task_path(task), class: "show-task" %>
      <%= link_to "Edit", edit_task_path(task), class: "edit-task" %>
      <%= link_to "Delete", task_path(task), method: :delete, class: "destroy-task", data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>