<%= form_with(model: label, local: true) do |form| %>
  <% if label.errors.any? %>
    <div id="error_explanation">
      <h2><%= label.errors.count %> 件のエラーメッセージ</h2>

      <ul>
        <% label.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <% Label.all.each do |label| %>
      <div>
        <%= form.check_box :label_ids, { multiple: true, include_hidden: false }, label.id, nil %>
        <%= label.name %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <% if label.new_record? %>
      <%= form.submit t('helpers.submit.create', model: Label.model_name.human) %>
    <% else %>
      <%= form.submit t('helpers.submit.update', model: Label.model_name.human) %>
    <% end %>
  </div>
<% end %>
